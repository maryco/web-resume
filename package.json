{
  "name": "web-resume",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "gulp": "gulp",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "test": "jest ./tests",
    "test:unit": "jest --colors ./tests/unit",
    "test:feature": "jest --colors ./tests/feature --passWithNoTests",
    "test:file": "jest --colors "
  },
  "dependencies": {
    "@tweenjs/tween.js": "^18.5.0",
    "core-js": "^3.4.3",
    "d3": "^5.14.2",
    "normalize.css": "^8.0.1",
    "vue": "^2.6.10",
    "vuex": "^3.1.2",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.1.0",
    "@vue/cli-plugin-eslint": "^4.1.0",
    "@vue/cli-service": "^4.1.0",
    "@vue/test-utils": "^1.0.0-beta.30",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "eslint": "^5.16.0",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-vue": "^5.0.0",
    "flush-promises": "^1.0.2",
    "jest": "^24.9.0",
    "jest-serializer-vue": "^2.0.2",
    "node-sass": "^7.0.0",
    "sass-loader": "7.0.1",
    "vue-jest": "^3.0.5",
    "vue-template-compiler": "^2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "jest/globals": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1,
      "vue/no-unused-components": 1
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "plugins": [
      "jest"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ]
  }
}
